{
  "collectionName": "forms_select_fields",
  "info": {
    "displayName": "Select Field",
    "description": ""
  },
  "options": {},
  "attributes": {
    "name": {
      "type": "customField",
      "options": {
        "global": "form-input-name"
      },
      "customField": "plugin::dynamic-enumeration.dynamic-field",
      "required": true
    },
    "label": {
      "type": "string",
      "required": true
    },
    "placeholder": {
      "type": "string"
    },
    "options": {
      "type": "component",
      "repeatable": true,
      "component": "forms-assets.select-option",
      "required": true,
      "min": 1
    },
    "type": {
      "type": "enumeration",
      "enum": ["select", "radio", "checkbox"],
      "required": true,
      "default": "select"
    },
    "size": {
      "type": "enumeration",
      "enum": ["full", "half"],
      "required": true,
      "default": "full"
    },
    "showConditions": {
      "type": "component",
      "repeatable": true,
      "component": "forms-assets.field-conditions",
      "required": false
    },
    "required": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
